// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Patients {
  id         String   @id @default(uuid())
  first_name String
  last_name  String
  birth_date DateTime @db.Date
  gender     Gender
  visits      Visit[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Visit {
  id String   @id @default(uuid())
  patient   Patients   @relation(fields: [patient_id], references: [id])
  patient_id String
  date DateTime
  height String 
  weight String
  bmi Decimal
  vitalData VitalDetails[]
}

model VitalDetails {
  id Int @id @default(autoincrement())
  visit Visit @relation(fields: [visit_id], references: [id])
  visit_id String
  date DateTime
  health GeneralHealth
  onDiet Boolean
  onDrugs Boolean
  comments String @db.LongText
}

enum Gender{
  Male
  Female
}
enum GeneralHealth{
  Good
  Bad
}